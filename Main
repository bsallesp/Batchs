VIEW ACTIVE DOCKERS BY IP:
docker inspect --format '{{.Name}}\t{{range .NetworkSettings.Networks}}{{.IPAddress}}{{end}}' $(docker ps -q)

VERIFICA O IP DE UM CONTAINER
docker inspect -f '{{range .NetworkSettings.Networks}}{{.IPAddress}}{{end}}' <CONTAINER>

COMMIT CONTAINER TO IMAGE
docker commit 1cf1966a67e brunosallesdev/powerdash-nginx:latest

INSPECIONAR UM ARQUIVO DENTRO DO DOCKER
docker exec -it db6854612dea cat /etc/letsencrypt/live/thelaserspace/fullchain.pem

FORCAR INICIO DO CONTAINER COM ERRO
docker run -it --rm 7f20add38ae6 /bin/bash

COPIA DO HD PARA O CONTAINER:
docker cp /docker-files/thelaserspace/docker-compose/config/default.conf 8f87812d69da:/etc/nginx/conf.d/

CRIA UM CONTAINER POSTGRES
docker run --name brunothebot-postgres -e POSTGRES_PASSWORD=@pyramid2050! -d postgres

curl -I http://seusite.com
nmap -p 80,443 thelaser.space
#!/bin/bash

# Remover todos os containers
docker rm -f $(docker ps -a -q)
# Remover todas as imagens
docker rmi -f $(docker images -q)
# Recriar os serviços com Docker Compose
docker-compose up --build -d





# Caminho do arquivo
$path = "C:\Users\bsall\source\repos\BrunoTheBot.Blazor\BrunoTheBot.PDFAPI\API-PDF\app.py"

# Ler o conteúdo do arquivo
$content = Get-Content -Path $path -Raw

# Criar o objeto de codificação UTF-8 sem BOM
$encoding = New-Object System.Text.UTF8Encoding($false)

# Salvar o arquivo com UTF-8 sem BOM
[System.IO.File]::WriteAllText($path, $content, $encoding)
